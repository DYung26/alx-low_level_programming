.PHONY: all clean oclean fclean re

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

%.o:%.c
	${CC} ${CFLAGS} -c -o $@ $<

all: ${NAME}

${NAME}: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

clean:
	${RM} .*.swp ${NAME}

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re: oclean all
