.PHONY: all ${NAME} clean oclean fclean re

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
# RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: m.h

m.h: ${NAME}

${NAME}:
	${CC} -Wall -Werror -Wextra -pedantic main.o school.o -o ${NAME}

clean:
	${RM} .*.swp *~ ${NAME}

oclean:
	${RM} main.o school.o

fclean: clean oclean

re: fclean all
