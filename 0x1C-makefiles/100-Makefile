.PHONY: all ${NAME} m.h clean oclean fclean re

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

%.o: main.c
    $(CC) $(MY_CFLAGS) -c $< -o $@

%.o: school.c
    $(CC) $(MY_CFLAGS) -c $< -o $@

all: m.h ${NAME}

${NAME}: ${OBJ}
	${CC} ${MY_CFLAGS} $< -o $@

clean:
	${RM} .*.swp *~ ${NAME}

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re: fclean all
