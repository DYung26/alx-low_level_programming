.PHONY: all clean oclean fclean re

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
# RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: m.h ${NAME}

${NAME}:
	${CC} -Wall -Werror -Wextra -pedantic ${OBJ} -o ${NAME}

clean:
	${RM} .*.swp *~ ${NAME}

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re: fclean all
